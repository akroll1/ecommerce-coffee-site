doctype html
html
	head
		title= title
		script(src='http://code.jquery.com/jquery.js')
		script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
		script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet', media='screen')
		|<link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
		link(rel='stylesheet', href='/stylesheets/style.css')

	body
		#nav
			.container
				a#logo(href="/") DC Roasters

				#right-wrapper
					if (!username)
						#nav-log-in
							a(href="/login") Log In
						#nav-subscribe
							a.btn.btn-primary(href="/register") Subscribe
					if (username)
						#nav-log-in Welcome,
							a(href="/myaccount") #{username}
							a.btn.btn-primary(href="/logout") Logout
							if (accessLevel)
								a.btn.btn-warning(href="/admin") Admin
								if (test)
									a.btn.btn-danger(href="/") Test
		if (username)
			#signup-wrapper
				.container
					ul.signup-progress
						li
							a(href="/").welcome 1. Welcome
						li.active
							a(href="/choices").options 2. Options
						li
							a(href="/delivery").delivery  3. Delivery
						li
							a(href="/payment").payment 4. Payment

		block content


		include includes/footer
		include includes/analytics.html